{
    "apiVersion": "0.1",
    "swaggerVersion": "1.2",
    "basePath": "http://localhost:9999/sample",
    "apis": [

        {
            "path": "/sample_post",
            "operations": [
                {
                    "method": "POST",
                    "nickname": "sample_post",
                    "type": "object",
                    "parameters": [
                        {
                            "paramType": "body",
                            "name": "content",
                            "type": "body_model",
                            "required": true
                        }
                    ]
                }
            ]
        },

        {
            "path": "/post_with_primitive_body",
            "operations": [
                {
                    "method": "POST",
                    "nickname": "post_with_primitive_body",
                    "type": "object",
                    "parameters": [
                        {
                            "paramType": "body",
                            "name": "content",
                            "type": "array",
                            "items": { "type": "string" },
                            "required": true
                        }
                    ]
                }
            ]
        },

        {
            "path": "/sample/{path_arg}/resource",
            "operations": [
                {
                    "method": "GET",
                    "nickname": "standard",
                    "type": "standard_response",
                    "parameters": [
                        {
                            "paramType": "path",
                            "name": "path_arg",
                            "type": "string",
                            "enum": ["path_arg1", "path_arg2"],
                            "required": true
                        },
                        {
                            "paramType": "query",
                            "name": "required_arg",
                            "type": "string",
                            "required": true
                        },
                        {
                            "paramType": "query",
                            "name": "optional_arg",
                            "type": "string",
                            "required": false
                        }
                    ]
                }
            ]
        }

    ],
    "models": {
	"body_model": {
            "id": "body_model",
            "type": "object",
            "required": [ "foo" ],
	    "additionalProperties": false,
            "properties": {
                "foo": { "type": "string" },
                "bar": { "type": "string" }
            }
        },
        "standard_response": {
            "id": "standard_response",
            "type": "object",
            "required": [ "raw_response", "logging_info" ],
	    "additionalProperties": false,
            "properties": {
                "raw_response": {
                    "type": "string"
                },
                "logging_info": {
                    "type": "object"
                }
            }
        }
    }
}
